[Unit]
Description=openbank lake message relay
After=inetd.service

[Service]
Type=simple
EnvironmentFile=/etc/lake/params.conf
ExecStart=/openbank/services/lake/entrypoint
ExecStop=/openbank/services/lake/stop.sh
StandardInput=null
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
Restart=on-failure
RestartSec=1
StartLimitIntervalSec=0
TimeoutStartSec=0
KillMode=process

[Install]
WantedBy=multi-user.target
