[Unit]
Description=openbank lake message relay
PartOf=lake.service
After=lake.service
ConditionPathExists=/etc/init/lake.conf

[Service]
Type=notify
EnvironmentFile=/etc/init/lake.conf
StartLimitBurst=0
ExecStart=/usr/bin/lake
StandardInput=null
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
Restart=on-failure
RestartSec=1
TimeoutStartSec=0
KillMode=process

[Install]
WantedBy=lake.service
